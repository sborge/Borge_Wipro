<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.borge.wipro_challenge">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.borge.wipro_challenge.SearchActivity"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.borge.wipro_challenge.ResultsActivity"
            android:label="@string/results_name"
            android:parentActivityName="com.borge.wipro_challenge.SearchActivity"/>
        <activity
            android:name="com.borge.wipro_challenge.DisplayActivity"
            android:label="Display"
            android:parentActivityName="com.borge.wipro_challenge.SearchActivity"/>
    </application>

</manifest>